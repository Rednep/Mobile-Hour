<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
        <title>Mobile Hour</title>
</head>

<body>
    <main>
        <%- include("partials/header.ejs") %>

            <section class="phone-list">
                <% for (let product of products) { %>
                    <article class="phone-card">
                        <img src="\generic-phone-product-scaled.jpg" alt="Mobile phone" />
                        <h2>
                            <%= product.product_manufacturer %>
                            <%= product.product_name %>
                        </h2>
                        <span class="product-details">
                            <%= product.product_model %>
                        </span>

                        <span class="product-features">
                            <%= product.feature_operating_system %>, <%= product.feature_cpu %>, <%= product.feature_storage %>, <%= product.feature_rear_camera %>
                        </span>

                        <span class="product-details">
                            $<%= product.product_price %>
                        </span>

                        <a href="product_checkout?id=<%= product.product_id %>">Buy
                        </a>
                    </article>
                    <% } %>
            </section>

            <%- include("partials/footer.ejs") %>
    </main>
</body>

</html>